<% @page_title = "List Admin Users" %>

<%= link_to("<<Back to Menu", {:controller => 'access', :action => 'menu'}, :class => 'back_link') %>

<div class="user list">
  <h2>Admin Users</h2>

  <%= link_to("Add new Admin User",{:action => 'new'}, :class => "action new") %>
  
  <div><%= pluralize(@admin_users.size, 'admin user')%> found</div>

  <table class="listing" summary="Admin User list">
    <tr class="header">
	  <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |admin| %>
    <tr class="<%=cycle('odd','even') %>">
  	  <td><%= admin.username %></td>
      <td><%= admin.full_name %></td>
      <td><%= mail_to(admin.email) %></td>
      <td class="actions">
        <%= link_to("Edit", {:action => 'edit', :id => admin.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => admin.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
