<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<% @page_title = "Delete Section" %>

<div class="section delete">
  <h2>Delete section</h2>
  
  <%= form_for(:section, :url => {:action => 'destroy', :id => @section.id, :page_id => @page.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this subject?</p>
  
    <p class="reference-name"><%= @section.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete section") %>
    </div>
    
  <% end %>
</div>
