
<%= link_to("<< Back to List", {:action => 'list', :subject_id => @subject_id}, :class => 'back-link') %>

<% @page_title = "Update Page" %>

<div class="page edit">
  <h2>Update page</h2>

  <%= form_for(:page, :url => {:action => 'update',:id => @page.id, :subject_id => @subject_id}) do |f| %>
  
  	<%= render(:partial => "form", :locals => {:f => f}) %>
    
    <div class="form-buttons">
      <%= submit_tag("Update page") %>
    </div>
    
  <% end %>
</div>
