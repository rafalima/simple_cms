<%= link_to("<< Back to List", {:action => 'list', :subject_id => @subject_id}, :class => 'back-link') %>

<% @page_title = "Delete Page" %>

<div class="page delete">
  <h2>Delete Page</h2>
  
  <%= form_for(:page, :url => {:action => 'destroy', :id => @page.id, :subject_id => @subject.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this subject?</p>
  
    <p class="reference-name"><%= @page.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Page") %>
    </div>
    
  <% end %>
</div>
